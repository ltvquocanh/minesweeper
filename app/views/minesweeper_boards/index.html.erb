<!-- app/views/minesweeper_boards/index.html.erb -->
<div class="row">
  <div class="col-12">
    <h1 class="display-1">All Generated Minesweeper Boards</h1>
    <table class="table">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Board name</th>
        <th scope="col">Email</th>
        <th scope="col">Created at</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @minesweeper_boards.each_with_index do |board , t| %>
        <tr>
          <td><%=t +1 %></td>
          <td><strong><%= link_to board.board_name, minesweeper_board_path(board) %></strong></td>
          <td><%= board.email %></td>
          <td><%= board.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td>
            <%= link_to "Delete", minesweeper_board_path(board),
                        method: :delete,
                        data: { turbo_method: :delete, confirm: "Are you sure you want to delete this board?" },
                        class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= paginate @minesweeper_boards %>
  </div>
</div>
